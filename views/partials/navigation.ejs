<div class="flex flex-col md:flex-row md:justify-between">
  <div class="flex flex-row justify-between">
    <div class="flex flex-row">
      <div class="md:hidden flex">
        <i class="fas fa-bars m-2 py-2 text-3xl text-blue-500"></i>
      </div>
      <div class="flex">
        <button class="text-white text-center bg-blue-500 hover:bg-blue-700 font-bold px-4 py-2 m-2 rounded">
          <a href="/">Company</a>
        </button>
      </div>
    </div>
    <div class="border border-black md:hidden flex hidden">
      <button class="text-white text-center bg-blue-500 hover:bg-blue-700 font-bold px-4 py-2 my-2 rounded">
        <a href="/login">Login</a>
      </button>
    </div>
  </div>
  <div class="text-gray-700 text-center w-full md:block border border-t-1">
    <form action="" method="GET">
      <input class="px-4 py-2 my-2 mr-0 bg-gray-300 focus:bg-white focus:border-gray-300 focus:outline-0 rounded border border-transparent w-3/5" type="text" placeholder="Search for products">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Search
      </button>
    </form>
  </div>
  <div class="md:flex md:flex-row hidden">
    <% if(path !== '/login'){ %>
    <div class="border">
      <button class="text-white text-center bg-blue-500 hover:bg-blue-700 px-4 py-2 m-2 font-bold rounded"><a href="/login">Login</a></button>
    </div>
    <% } %>
    <div class="border">
      <button class="text-white text-center bg-blue-500 hover:bg-blue-700 px-4 py-2 m-2 font-bold rounded"><a href="/dashboard">Dashboard</a></button>
    </div>
  </div>
</div>