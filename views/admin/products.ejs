<%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navigation') %>

  <div class="products border">
    <h1 class="text-6xl font-bold text-blue-500">Your Products</h1>
    <% products.forEach(product => { %>
      <div class="m-2">
    <a href="/product/<%= product.id %>">
        <div class="rounded overflow-hidden shadow-lg">
          <img class="" src="<%= product.imageUrl %>" alt="<%= product.name %>">
          <div class="px-6 py-2">
            <div class="font-bold text-xl mb-2"><%= product.name %></div>
            <p class="text-gray-700 text-base">
              â‚¹<%= product.price %>
            </p>
          </div>
          <div class="px-6 py-2">
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><%= product.description %></span>
          </div>
          <div class="px-6 py-2 flex">
            <div class="px-6 py-2">
              <form action="/admin/edit-product/<%= product.id %>" method="POST">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                  <i class="fas fa-edit"></i> Edit
                </button>
                <input type="hidden" name="productId" value="<%= product.id %>">
              </form>
            </div>
            <div class="px-6 py-2">
              <form action="/delete-product" method="POST">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                  <i class="fas fa-trash-alt"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>

<%- include('../partials/footer') %>
<%- include('../partials/end') %>