<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/navigation') %>
  <%- include('../partials/sliding-navigation') %>
  <div class="products border md:w-3/5 md:mx-auto">
    <h1 class="text-6xl font-bold text-blue-500">Your Products</h1>
    <% products.forEach(product => { %>
      <div class="">
        <div class="rounded overflow-hidden shadow-lg md:flex justify-between">
          <img class="" src="<%= product.imageUrl %>" alt="<%= product.name %>" height="150">
          <div class="flex flex-col">
            <div class="px-6 py-2 border border-blue-800">
              <a href="/product/<%= product.id %>" class="hover:underline hover:text-blue-500">
                <%= product.name %>
              </a>
              <p class="font-bold text-base">
                â‚¹<%= product.price %>
              </p>
            </div>
            <div class="px-6 py-2">
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><%= product.description %></span>
            </div>
            <div class="px-6 py-2 flex">
              <div class="px-6 py-2">
                <form action="/admin/edit-product/<%= product.id %>" method="POST">
                  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                    <i class="fas fa-edit"></i> Edit
                  </button>
                  <input type="hidden" name="productId" value="<%= product.id %>">
                </form>
              </div>
              <div class="px-6 py-2">
                <form action="/admin/delete-product" method="POST">
                  <input type="hidden" name="productId" value="<%= product.id %>">
                  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                    <i class="fas fa-trash-alt"></i> Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
    <% }) %>
  </div>

<%- include('../partials/footer') %>
<%- include('../partials/end') %>